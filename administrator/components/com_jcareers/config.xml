<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_JCAREERS_COMPONENT_LABEL"
		description="COM_JCAREERS_COMPONENT_DESC"
	>
	<field name="resumeUploadDir"
             type="text"
             default="components/com_jcareers/resumes/"
             label="COM_JCAREERS_PARAMS_UPLOAD_DIR"
             description="COM_JCAREERS_PARAMS_UPLOAD_DIR_DESC"
             class="inputbox">
         </field>
      <field name="tableOddRowBgColor"
             type="text"
             default="#efefef"
             label="COM_JCAREERS_PARAMS_ODD_ROW_BGCOLOR"
             description="COM_JCAREERS_PARAMS_ODD_ROW_BGCOLOR_DESC"
             class="inputbox">
         </field>
         
         <field name="tableRowSeperatorColor"
             type="text"
             default="#cccccc"
             label="COM_JCAREERS_PARAMS_ROW_BORDER_COLOR"
             description="COM_JCAREERS_PARAMS_ROW_BORDER_COLOR_DESC"
             class="inputbox">
         </field>
         
		 <field name="tableHeaderFontSize"
             type="text"
             default="16"
             label="COM_JCAREERS_PARAMS_TABLE_HEADER_FONTSIZE"
             description="COM_JCAREERS_PARAMS_TABLE_HEADER_FONTSIZE_DESC"
             class="inputbox">
         </field>
         
         
         
         
         <field name="ListingPageHeader"
             type="note"
             default="Current Job Openings"
             label="COM_JCAREERS_PARAMS_LISTING_HEADER"
             description="COM_JCAREERS_PARAMS_LISTING_HEADER_DESC"
             class="inputbox">
         </field>
         <field type="spacer" name="myspacer" hr="true" />
          <field name="ListingPageContent"
             type="editor"
             default="Contents of the job listing page goes here."
             description=""
             class="inputbox"
             width="70%"
             filter="JComponentHelper::filterText">
         </field>
	</fieldset>
	
	<fieldset name="notifications"
		label="COM_JCAREERS_PARAMS_NOTIFICATIONS"
		description="COM_JCAREERS_PARAMS_NOTIFICATIONS_DESC"
	>

     	 <field name="NotificationSubject"
             type="textarea"
             cols="80"
             rows="1"
             default="Re:{code}, New application"
             label="COM_JCAREERS_PARAMS_NOTIFICATION_SUBJECT"
             description="COM_JCAREERS_PARAMS_NOTIFICATION_SUBJECT_DESC"
             class="inputbox">
         </field>
         
         <field name="NotificationBody"
             type="textarea"
             default=""
             cols="80"
             rows="10"
             label="COM_JCAREERS_PARAMS_NOTIFICATION_BODY"
             description="COM_JCAREERS_PARAMS_NOTIFICATION_BODY_DESC"
             class="inputbox">
         </field>
         
         <field name="NotificationEmails"
             type="textarea"
             default=""
             cols="80"
             rows="5"
             label="COM_JCAREERS_PARAMS_NOTIFY_EMAILS"
             description="COM_JCAREERS_PARAMS_NOTIFY_EMAILS_DESC"
             class="inputbox">
         </field>
         
         
	</fieldset>

	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field 
            name="rules" 
            type="rules"
			component="com_jcareers"
            class="inputbox"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
